<h1>Welcome to Chitter</h1>

<h2>Latest Peeps:</h2> 

<ul>
	<% @peeps.reverse.each do |peeps| %>
		<li><%= "#{peeps.peep} - #{peeps.user.username}" %></li>
	<% end %>
</ul>	

<div id="new-peep">
	<% if current_user %>
		<form action="/peeps" method="post">
			Peep here: <input type="text" name="peep">
			<input type="submit" value="add peep">
		</form>
	<% else %>
		<form method="get" action="/sessions/new">
<input type="submit" value="Sign In">
		</form>	
			<form method="get" action="/users/new">
			<input type="submit" value="Sign Up">
		</form>	
	<%end%>
</div>